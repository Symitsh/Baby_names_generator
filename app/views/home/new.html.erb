<div class="container">
  <h1>Buttons</h1>
  <div class="btn-group">
    <% ('A'..'T').each do |letter| %>
      <% next if letter == 'Q' %>
      <%= link_to letter, letter_path(letter) %>
    <% end %>
  </div>

  <h1>Tableau</h1>
  <div class="table-responsive">
    <table class="table table-dark table-hover">
      <thead>
        <tr>
          <th scope="col">name_count</th>
          <th scope="col">baby_names</th>
        </tr>
      </thead>
      <tbody>
        <% @name_count.each_with_index do |name_count, index| %>
          <tr>
            <td><%= name_count %></td>
            <td><%= @baby_names[index] %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
